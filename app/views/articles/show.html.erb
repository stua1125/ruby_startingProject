<h1><%= @art.title %></h1>

<p><%= @art.body %></p>

<ul>
<!--  <li><%#= Article.find(2).title %></li>-->
  <li><%= link_to "Edit", edit_article_path(@art) %></li>
  <li><%= link_to "Destroy", article_path(@art), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %></li>
</ul>

<h2>Comments</h2>
<% @art.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<%= link_to "root", root_path %>

<h2>Add a comment:</h2>
<%= form_with model: [ @art, @art.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>

<% end %>
